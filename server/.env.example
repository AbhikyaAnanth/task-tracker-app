# Environment Variables for Task Tracker Server
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tasktracker?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration (optional - defaults to allow all origins in development)
# CORS_ORIGIN=http://localhost:5174

# Security (optional - for future enhancements)
# JWT_SECRET=your-super-secret-jwt-key
# SESSION_SECRET=your-session-secret

# Logging (optional)
# LOG_LEVEL=info
